<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/dreaml"
        android:textSize="14sp"
        android:textColor="#707070"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="6sp"
        android:text="화"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/text_min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dreaml"
        android:textSize="14sp"
        android:textColor="#707070"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        android:text="최저 16°" />

    <TextView
        android:id="@+id/text_max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dreaml"
        android:textSize="14sp"
        android:textColor="#707070"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="10sp"
        app:layout_constraintRight_toLeftOf="@id/text_min_temp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="38dp"
        android:text="최고 22°" />

    <ImageView
        android:id="@+id/img_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/text_day"
        app:layout_constraintRight_toLeftOf="@id/text_max_temp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>